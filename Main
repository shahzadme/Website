<script>
document.getElementById('videoForm').addEventListener('submit', function(e) {
  e.preventDefault();
  const url = document.getElementById('videoUrl').value;
  const resultDiv = document.getElementById('result');
  
  resultDiv.style.display = 'block';
  resultDiv.innerHTML = `
    <div style="text-align: center; padding: 20px;">
      <div style="border: 4px solid #667eea; border-top: 4px solid transparent; border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin: 0 auto;"></div>
      <p style="margin-top: 15px; color: #fff;">Analyzing video...</p>
    </div>
  `;
  
  setTimeout(() => {
    resultDiv.innerHTML = `
      <div style="background: rgba(255,255,255,0.08); padding: 30px; border-radius: 15px; max-width: 600px; margin: 0 auto; backdrop-filter: blur(10px);">
        <h3 style="color: #667eea; margin-bottom: 15px;">‚úì Summary Generated Successfully!</h3>
        <p style="color: #d0d0d0; line-height: 1.8;">Your video has been processed. The AI has extracted key points, created a comprehensive summary, and generated study materials.</p>
        <button onclick="alert('This is a demo. Integrate with your backend!')" style="background: #667eea; color: white; border: none; padding: 12px 30px; border-radius: 8px; margin-top: 20px; cursor: pointer; font-weight: 600;">View Summary</button>
      </div>
    `;
  }, 2000);
});

// Smooth scroll for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if (target) {
      target.scrollIntoView({ behavior: 'smooth' });
    }
  });
});
</script>

